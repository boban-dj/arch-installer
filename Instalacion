##DONE loadkeys es
##DONE fdisk -l
##DONE cfdisk /dev/sdc
##DONE mkfs.ext4 /dev/sdc1
##DONE mkswap /dev/sdb6
##DONE mount /dev/sdc1 /mnt
##DONE pacstrap /mnt base base-devel grub-bios
##DONE swapon /dev/sdb6
genfstab /mnt > /mnt/etc/fstab
arch-chroot /mnt
	nano /etc/locale.gen
	echo "LANG=es_ES.UTF-8" > /etc/locale.conf
	echo "KEYMAP=es" > /etc/vconsole.conf
	locale-gen
	ln -s /usr/share/zoneinfo/Europe/Madrid /etc/localtime
	grub-install /dev/sdc
	grub-mkconfig -o /boot/grub/grub.cfg
	echo "ArchLinux" > /etc/hostname
	exit
umount /dev/sdc1
swapoff /dev/sdb6
reboot

-------------------------------------------------------------------

systemctl enable dhcpcd 
useradd -m -g users -G video,audio,lp,optical,games,power,wheel,storage -s /bin/bash mario
passwd mario
pacman -S zsh grml-zsh-config
nano /etc/pacman.conf #Agregar el repositorio ArchlinuxFR
pacman -Syu
pacman -S yaourt
nano /etc/sudoers # Descomentar el grupo Wheel
pacman -S gnome
sudo systemctl enable gdm
reboot